<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ffg_notice_dialog_content_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/ffg_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ffg_notice_dialog_head_bg"
            android:gravity="center"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ffg_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/ffg_close_img" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ffg_dialog_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:id="@+id/ffg_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="all"
            android:gravity="left"
            android:textColor="@color/ffg_color_gray"
            android:textSize="12sp" />
    </ScrollView>

    <View
        android:id="@+id/ffg_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ffg_color_gray_50" />

    <LinearLayout
        android:id="@+id/ffg_dialog_bttom_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ffg_notice_dialog_foot_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ffg_dialog_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="action1"
            android:textColor="@color/ffg_color_white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/ffg_dialog_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="action2"
            android:textColor="@color/ffg_color_orange"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>