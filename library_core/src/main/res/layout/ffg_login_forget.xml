<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/ffg_tv_forget_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ffg_login_tv_forget_pwd"
        android:textColor="@color/ffg_color_red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ffg_et_forget_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.flyfun.ktx.gamesdk.core.ui.EventEditText
        android:id="@+id/ffg_et_forget_account"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ffg_et_frame_selector_bg"
        app:layout_constraintBottom_toTopOf="@id/ffg_et_forget_code"
        app:layout_constraintTop_toBottomOf="@id/ffg_tv_forget_tips" />


    <cn.flyfun.ktx.gamesdk.core.ui.VerifyCodeEditText
        android:id="@+id/ffg_et_forget_code"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ffg_et_frame_selector_bg"
        app:layout_constraintBottom_toTopOf="@id/ffg_et_forget_pwd1"
        app:layout_constraintTop_toBottomOf="@id/ffg_et_forget_account" />


    <cn.flyfun.ktx.gamesdk.core.ui.EventEditText
        android:id="@+id/ffg_et_forget_pwd1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ffg_et_frame_selector_bg"
        app:layout_constraintBottom_toTopOf="@id/ffg_et_forget_pwd2"
        app:layout_constraintTop_toBottomOf="@id/ffg_et_forget_code" />

    <cn.flyfun.ktx.gamesdk.core.ui.EventEditText
        android:id="@+id/ffg_et_forget_pwd2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ffg_et_frame_selector_bg"
        app:layout_constraintBottom_toTopOf="@id/ffg_btn_confirm"
        app:layout_constraintTop_toBottomOf="@id/ffg_et_forget_pwd1" />


    <Button
        android:id="@+id/ffg_btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ffg_btn_red_bg"
        android:text="@string/ffg_btn_confirm"
        android:textAllCaps="false"
        android:textColor="@color/ffg_color_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ffg_et_forget_pwd2" />

</androidx.constraintlayout.widget.ConstraintLayout>

